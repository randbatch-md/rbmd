{
  "init_configuration": {

    "read_data": {
      "file": "rbmd.data",
      "unit": "REAL", //LJ ,REAL
      "atom_style": "full", //支持atomic，charge,full
      "velocity_type": "GAUSS"
    },

    "inbuild": {
      "dims": [ 10, 10, 10 ],
      "x_range": [ 0.0, 10 ],
      "y_range": [ 0.0, 10 ],
      "z_range": [ 0.0, 10 ],
      "velocity_type": "GAUSS"
    }
  },

  "hyper_parameters": {
    "force_field": {
      "type": "CVFF" //,  OPLS-AA(fix_erf),CVFF(fix_erf)，EAM(potential_file),MACE
      //"potential_file": "/path/to/"
    },

    "neighbor": {
      "type": "RBL", //RBL,VERLET-LIST
      "cut_off": 5,
      "r_core": 2.5,
      "neighbor_sample_num": 10
    },

    "coulomb": {
      "type": "RBE", //  RBE,EWALD
      "coulomb_sample_num": 100,
      "alpha": 0.1,
      "kmax": 4
    },

    "extend": {
      "fix_shake": false
    }
  },

  "execution": {
    "ensemble": "NPT", // "NVE","NVT" ,"NPT"
    "temperature": [ 298.0, 298.0, 100 ],
    "pressure": [ 1.0, 1.0, 1000 ],
    "temp_ctrl_type": "NOSE_HOOVER", //Berendsen ，NOSE_HOOVER
    "press_ctrl_type": "Parrinello-Rahman", //Berendsen ,stochastic cell rescaling ,Parrinello-Rahman     
    "timestep": 0.5, //timestep
    "num_steps": 10000 //run 
  },

  "outputs": {

    "thermo_out ": { //热力学输出
      "interval": 1
    },

    "rdf_out": {
      "interval": 10,
      "radius": 5,
      "dr": 0.1,
      "statistics_rdf_steps": 1000,
      "atoms_pair": [
        [ 1, 2 ],
        [ 2, 3 ]
      ]
    },

    "msd_out": {
      "interval": 10,
      "start_step": 0,
      "end_step": 10
    },

    "vacf_out": {
      "interval": 10,
      "start_step": 0,
      "end_step": 10
    },

    "trajectory_out": {
      "interval": 10
    }

  }
}