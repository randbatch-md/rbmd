{
  "init_configuration": {

    "read_data": {
      "file": "rbmd.data",
      "unit": "REAL", 
      "atom_style": "full",   //支持atomic，charge,full
      "velocity_type": "GAUSS"
    }

    //"inbuild": {
    //  "dims": [ 10, 10, 10 ],
    //  "x_range": [ 0.0, 10 ],
    //  "y_range": [ 0.0, 10 ],
    //  "z_range": [ 0.0, 10 ],
    //  "velocity_type": "GAUSS",
    //  "unit": "LJ"
    //}
  },

  "hyper_parameters": {
    "force_field": {
      "type": "CVFF"
      //"potential_file": "/path/to/"
    },

    "neighbor": {
      "type": "RBL", //RBL,VERLET-LIST
      "cut_off": 12,
      "r_core": 6,
      "neighbor_sample_num": 100
    },

    "coulomb": {
      "type": "RBE",   //  RBE,EWALD
      "coulomb_sample_num": 100,
      "alpha": 0.07,
      "kmax": 4
    },

    "extend": {
      //"fix_shake": null,
      "special_bonds": [ 0, 0, 0 ]
    }
  },

  "execution": {
    "ensemble": "NVT", 					// "NVE","NVT" ,"NPT"
    "temperature":[ 298.0, 298.0, 10 ],    //50 =100* dt;
    "pressure": [ 1.0, 1.0, 1000 ], 
    "temp_ctrl_type": "BERENDSEN",       //BERENDSEN ，NOSE_HOOVER  
    "press_ctrl_type": "BERENDSEN",  	 //BERENDSEN ,Parrinello-Rahman
    "timestep": 1.0,
    "num_steps": 100000 
  },

  "outputs": {

    "thermo_out": { 
      "interval": 1
    },

    "rdf_out": {
      "interval": 10,
      "radius": 10,
      "dr": 0.1,
      "statistics_rdf_steps": 100,
      "atoms_pair": [[ 0, 0 ]]
    },
    
    "msd_out": {
      "interval": 100,
      "start_step": 0,
      "end_step": 100000
    },
    
    "vacf_out": {
      "interval": 100,
      "start_step": 0,
      "end_step": 100000
    },
    
    "trajectory_out": {
      "interval": 1000
    }

  }
}