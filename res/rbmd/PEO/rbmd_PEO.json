{
  "init_configuration": {

    "read_data": {
      "file": "1122PEO+200Li_nvt.data",
      "unit": "REAL", //LJ ,REAL
      "atom_style": "full", //支持atomic，charge,full
      "velocity_type": "GAUSS"
    }

    //"inbuild": {
    //  "dims": [ 10, 10, 10 ],
    //  "x_range": [ 0.0, 10 ],
    //  "y_range": [ 0.0, 10 ],
    //  "z_range": [ 0.0, 10 ],
    //  "velocity_type": "GAUSS",
    //  "unit": "LJ"
    //}
  },

  "hyper_parameters": {
    "force_field": {
      "type": "CVFF"//,  OPLS-AA(fix_erf),CVFF(fix_erf)，EAM(potential_file)
      //"potential_file": "/path/to/"
    },

    "neighbor": {
      "type": "RBL", //RBL,VERLET-LIST
      "cut_off": 12,
      "r_core": 6,
      "neighbor_sample_num": 100
    },

    "coulomb": {
      "type": "RBE", //  RBE,EWALD
      "coulomb_sample_num": 100,
      "alpha": 0.04,
      "kmax": 4
    },

    "extend": {
      //"fix_shake": null,
      "special_bonds": [ 0, 0, 0 ]
    }
  },

  "execution": {
    "ensemble": "NVT", // "NVE","NVT" ,"NPT"
    "temperature":[ 298.0, 298.0, 50 ],    //50 =100* dt;
    "pressure": [ 1.0, 1.0, 1000 ], // "NPT"                                                                         NVE条件下均无
    "temp_ctrl_type": "BERENDSEN", //BERENDSEN ，NOSE_HOOVER                                                       NVE条件下均无
    "press_ctrl_type": "Parrinello-Rahman", //Berendsen ,stochastic cell rescaling ,Parrinello-Rahman      "NPT"     NVE条件下均无
    "timestep": 0.5,//0.01,//0.5, //timestep
    "num_steps": 10000 //run 
  },

  "outputs": {

    "thermo_out": { //热力学输出
      "interval": 1
    },

    "rdf_out": {
      "interval": 10,
      "radius": 10,
      "dr": 0.1,
      "statistics_rdf_steps": 1000,
      "atoms_pair": [[ 0, 0 ]]
    },
    
    "msd_out": {
      "interval": 10,
      "start_step": 0,
      "end_step": 10000
    },
    
    "vacf_out": {
      "interval": 10,
      "start_step": 0,
      "end_step": 10000
    },
    
    "trajectory_out": {
      "interval": 1000
    }

  }
}